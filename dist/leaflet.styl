// media server
$media = 'https://media.hotels.nl/leaflet'

// colors
$dark = #666
$darkFallback = #EEE
$grey = #999
$lGrey = #DDD
$bGrey = #333
$sGrey = #BBB
$fGrey = #777
$soft = #F8F8F9
$blue = #05F
$sBlue = #0078A8
$orange = #FFA500

.leaflet-map-pane,
.leaflet-tile,
.leaflet-marker-icon,
.leaflet-marker-shadow,
.leaflet-tile-pane,
.leaflet-overlay-pane,
.leaflet-shadow-pane,
.leaflet-marker-pane,
.leaflet-overlay-pane svg,
.leaflet-zoom-box,
.leaflet-image-layer
  position: absolute

.leaflet-container
  overflow: hidden

.leaflet-tile-pane,
.leaflet-container,
.leaflet-corner
  transform: translate3d(0,0,0)

.leaflet-tile,
.leaflet-marker-icon,
.leaflet-marker-shadow
  user-select: none

.leaflet-marker-icon,
.leaflet-marker-shadow
  display: block

.leaflet-clickable
  cursor: pointer

.leaflet-dragging
  cursor: move

.leaflet-dragging .leaflet-clickable
  cursor: move

.leaflet-container img
  max-width: none

.leaflet-div-icon
  background: #FFF
  border: 1px solid $dark

.leaflet-editing-icon
  border-radius: 2px

.leaflet-tile-pane
  z-index: 2

.leaflet-objects-pane
  z-index: 3

.leaflet-overlay-pane
  z-index: 4

.leaflet-shadow-pane
  z-index: 5

.leaflet-marker-pane
  z-index: 6

.leaflet-zoom-box
  width: 0
  height: 0

.leaflet-tile
  visibility: hidden

.leaflet-tile-loaded
  visibility: inherit

a.leaflet-active
  outline: 2px solid $orange

.leaflet-control
  position: relative
  z-index: 7

.leaflet-top,
.leaflet-bottom
  position: absolute

.leaflet-top
  top: 0

.leaflet-right
  right: 0

.leaflet-bottom
  bottom: 0

.leaflet-left
  left: 0

.leaflet-control
  float: left
  clear: both

.leaflet-right .leaflet-control
  float: right

.leaflet-top .leaflet-control
  margin-top: 10px

.leaflet-bottom .leaflet-control
  margin-bottom: 10px

.leaflet-left .leaflet-control
  margin-left: 10px

.leaflet-right .leaflet-control
  margin-right: 10px

.leaflet-control-zoom
  background: #000
  background: rgba(0, 0, 0, .25)
  border-radius: 7px
  padding: 5px

  a
    background: $darkFallback
    background: rgba(255, 255, 255, .75)
    border-radius: 4px
    height: 19px
    width: 19px

    &:hover
      background-color: #FFF

  .leaflet-control-zoom-in
    background-image: url($media/zoom-in.png)
    margin-bottom: 5px

  .leaflet-control-zoom-out
    background-image: url($media/zoom-out.png)

.leaflet-control-zoom a, .leaflet-control-layers a
  background-position: 50% 50%
  background-repeat: no-repeat
  display: block

.leaflet-touch .leaflet-control-zoom a
  width: 27px
  height: 27px

.leaflet-control-layers
  background: $soft
  border-radius: 8px
  box-shadow: 0 1px 7px $grey

  a
    background-image: url($media/layers.png)
    height: 36px
    width: 36px

.leaflet-touch .leaflet-control-layers a
  height: 44px
  width: 44px

.leaflet-control-layers .leaflet-control-layers-list,
.leaflet-control-layers-expanded .leaflet-control-layers-toggle
  display: none

.leaflet-control-layers-expanded .leaflet-control-layers-list
  display: block
  position: relative

.leaflet-control-layers-expanded
  background: #FFF
  color: $bGrey
  font: 12px/1.5 "Helvetica Neue", Arial, Helvetica, sans-serif
  padding: 6px 10px 6px 6px

.leaflet-control-layers input
  margin-top: 2px
  position: relative
  top: 1px

.leaflet-control-layers label
  display: block

.leaflet-control-layers-separator
  border-top: 1px solid $lGrey
  height: 0
  margin: 5px -10px 5px -6px

.leaflet-container .leaflet-control-attribution
  background-color: #FFF
  background-color: rgba(255, 255, 255, .7)
  box-shadow: 0 0 5px $sGrey
  margin: 0

.leaflet-control-attribution,
.leaflet-control-scale-line
  color: $bGrey
  padding: 0 5px

.leaflet-container .leaflet-control-attribution,
.leaflet-container .leaflet-control-scale
  font: 11px/1.5 "Helvetica Neue", Arial, Helvetica, sans-serif

.leaflet-left .leaflet-control-scale
  margin-left: 5px

.leaflet-bottom .leaflet-control-scale
  margin-bottom: 5px

.leaflet-control-scale-line
  background-color: #000
  background-color: rgba(0, 0, 0, .5)
  border-top: none
  border: 2px solid $fGrey
  color: #000
  font-size: 10px
  line-height: 1
  padding-bottom: 2px
  text-shadow: 1px 1px 1px #FFF

.leaflet-control-scale-line:nth-child(2)
  border-bottom: none
  border-top: 2px solid $fGrey
  margin-top: -2px
  padding-top: 1px

.leaflet-touch .leaflet-control-attribution,
.leaflet-touch .leaflet-control-layers
  box-shadow: none

.leaflet-touch .leaflet-control-layers
  border: 5px solid $sGrey

.leaflet-fade-anim .leaflet-tile
  opacity: 0
  transition: opacity 0.2s linear

.leaflet-fade-anim .leaflet-tile-loaded
  opacity: 1

.leaflet-zoom-anim .leaflet-tile,
.leaflet-pan-anim .leaflet-tile
  transition: none

.leaflet-zoom-anim .leaflet-objects-pane
  visibility: hidden

.leaflet-container
  background: $lGrey

.leaflet-container a
  color: $sBlue

.leaflet-zoom-box
  background: #FFF
  border: 2px dotted $blue
  opacity: 0.5
